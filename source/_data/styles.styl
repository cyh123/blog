/* Homepage list mode: show titles/meta only, hide full post bodies. */
.index .post-body,
.index .post-footer {
  display: none !important;
}

.index .post-body * {
  display: none !important;
}

.index .post-header {
  margin-bottom: 0;
}

/* Restore paragraph indentation in posts/pages. */
.post-content .post-body p,
.post-body > p {
  text-indent: 2em !important;
}
